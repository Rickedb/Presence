@model IEnumerable<Presence.Web.Models.LoginViewModel>

@{
    ViewBag.Title = "ShowUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    <a href="javascript:history.go(-1)" class="btn btn-default"><span class='glyphicon glyphicon-arrow-left'></span> </a>
    Lista de Usuários
</h2>
<hr />
<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered table-condensed text-center">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Admin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreationDate)
                </th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    @if (item.Admin)
                {
                        <td>
                            Sim
                        </td>
                    }
                    else
                    {
                        <td>
                            Não
                        </td>
                    }
                    <td>
                        @Html.DisplayFor(modelItem => item.CreationDate)
                    </td>
                    <td>
                        @if (item.Admin)
                        {
                            <a href="/Account/EditUser?username=@item.Username" class="btn btn-default">
                                <span class='glyphicon glyphicon-pencil'></span>
                            </a>
                        }
                        <a href="/Account/Delete?username=@item.Username" class="btn btn-default">
                            <span class='glyphicon glyphicon-remove'></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="pull-right">
        @Html.ActionLink("Criar Usuário Administrador", "CreateUser", "Account", null, new { @class = "btn btn-primary" })
    </div>
</div>